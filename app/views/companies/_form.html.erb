<%= form_with(model: company, local: true, class: "space-y-6") do |form| %>
  <% if company.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            <%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc pl-5 space-y-1">
              <% company.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Company Information -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Company Information</h2>
    
    <div class="grid md:grid-cols-2 gap-6">
      <div>
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div>
        <%= form.label :website, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.url_field :website, placeholder: "https://example.com", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  </div>

  <!-- Founders Section -->
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Founders</h2>
      <button type="button" id="add-founder" class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200">
        Add Founder
      </button>
    </div>

    <div id="founders-container">
      <%= form.fields_for :founders do |founder_form| %>
        <div class="founder-fields bg-gray-50 rounded-lg p-4 mb-4 border border-gray-200">
          <div class="flex justify-between items-start mb-4">
            <h3 class="text-lg font-medium text-gray-900">Founder Details</h3>
            <button type="button" class="remove-founder text-red-600 hover:text-red-800 font-medium">
              Remove
            </button>
          </div>
          
          <div class="grid md:grid-cols-2 gap-4">
            <div>
              <%= founder_form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= founder_form.text_field :name, class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>

            <div>
              <%= founder_form.label :linkedin, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= founder_form.url_field :linkedin, placeholder: "https://linkedin.com/in/username", class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
            </div>
          </div>
          
          <%= founder_form.hidden_field :_destroy, class: "destroy-field" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Form Actions -->
  <div class="flex justify-end space-x-4 pt-6">
    <%= link_to 'Cancel', companies_path, class: 'bg-gray-600 hover:bg-gray-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200' %>
    <%= form.submit class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200' %>
  </div>
<% end %>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const foundersContainer = document.getElementById('founders-container');
  const addFounderButton = document.getElementById('add-founder');
  let founderIndex = document.querySelectorAll('.founder-fields').length;

  // Add founder functionality
  addFounderButton.addEventListener('click', function() {
    const newFounderHtml = `
      <div class="founder-fields bg-gray-50 rounded-lg p-4 mb-4 border border-gray-200">
        <div class="flex justify-between items-start mb-4">
          <h3 class="text-lg font-medium text-gray-900">Founder Details</h3>
          <button type="button" class="remove-founder text-red-600 hover:text-red-800 font-medium">
            Remove
          </button>
        </div>
        
        <div class="grid md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2" for="company_founders_attributes_${founderIndex}_name">Name</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" type="text" name="company[founders_attributes][${founderIndex}][name]" id="company_founders_attributes_${founderIndex}_name">
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-2" for="company_founders_attributes_${founderIndex}_linkedin">LinkedIn</label>
            <input class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" type="url" placeholder="https://linkedin.com/in/username" name="company[founders_attributes][${founderIndex}][linkedin]" id="company_founders_attributes_${founderIndex}_linkedin">
          </div>
        </div>
        
        <input type="hidden" name="company[founders_attributes][${founderIndex}][_destroy]" class="destroy-field" value="false">
      </div>
    `;
    
    foundersContainer.insertAdjacentHTML('beforeend', newFounderHtml);
    founderIndex++;
  });

  // Remove founder functionality (using event delegation)
  foundersContainer.addEventListener('click', function(e) {
    if (e.target.classList.contains('remove-founder')) {
      const founderField = e.target.closest('.founder-fields');
      const destroyField = founderField.querySelector('.destroy-field');
      
      if (destroyField.name.includes('[id]')) {
        // Existing record - mark for destruction
        destroyField.value = '1';
        founderField.style.display = 'none';
      } else {
        // New record - remove from DOM
        founderField.remove();
      }
    }
  });
});
</script>
