<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-900">Portfolio Companies</h1>
    <%= link_to 'Add New Company', new_company_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200' %>
  </div>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% @companies.each do |company| %>
      <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition duration-200 p-6 border border-gray-200">
        <div class="flex justify-between items-start mb-4">
          <h2 class="text-xl font-semibold text-gray-900 mb-2"><%= company.name %></h2>
          <div class="flex space-x-2">
            <%= link_to 'View', company, class: 'text-blue-600 hover:text-blue-800 text-sm' %>
            <%= link_to 'Edit', edit_company_path(company), class: 'text-green-600 hover:text-green-800 text-sm' %>
            <%= link_to 'Delete', company, method: :delete, 
                        confirm: 'Are you sure?', 
                        class: 'text-red-600 hover:text-red-800 text-sm' %>
          </div>
        </div>
        
        <% if company.website.present? %>
          <p class="text-gray-600 mb-3">
            <span class="inline-flex items-center">
              🌐 
              <a href="<%= company.website %>" target="_blank" class="ml-1 text-blue-600 hover:underline">
                <%= company.website %>
              </a>
            </span>
          </p>
        <% end %>

        <div class="border-t pt-3">
          <h3 class="text-sm font-medium text-gray-700 mb-2">Founders</h3>
          <% if company.founders.any? %>
            <div class="space-y-1">
              <% company.founders.each do |founder| %>
                <div class="flex items-center justify-between text-sm">
                  <span class="text-gray-900"><%= founder.name %></span>
                  <% if founder.linkedin.present? %>
                    <a href="<%= founder.linkedin %>" target="_blank" class="text-blue-600 hover:text-blue-800">
                      LinkedIn
                    </a>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500 text-sm">No founders listed</p>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @companies.empty? %>
    <div class="text-center py-12">
      <div class="max-w-md mx-auto">
        <div class="text-6xl mb-4">🏢</div>
        <h2 class="text-2xl font-semibold text-gray-900 mb-2">No companies yet</h2>
        <p class="text-gray-600 mb-6">Start building your portfolio by adding your first company.</p>
        <%= link_to 'Add First Company', new_company_path, class: 'bg-blue-600 hover:bg-blue-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200' %>
      </div>
    </div>
  <% end %>
</div>
