<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <!-- Header -->
    <div class="flex justify-between items-start mb-8">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Call Details</h1>
        <p class="text-gray-600"><%= @company.name %> - <%= @call.call_date.strftime("%B %d, %Y") %> at <%= @call.call_time.strftime("%I:%M %p") %></p>
      </div>
      <div class="flex space-x-3">
        <%= link_to 'Edit Call', edit_company_call_path(@company, @call), class: 'bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200' %>
        <%= link_to 'Back to Company', @company, class: 'bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition duration-200' %>
      </div>
    </div>

    <!-- Call Details Card -->
    <div class="bg-white rounded-lg shadow-lg p-8 mb-8">
      <div class="grid md:grid-cols-2 gap-8 mb-8">
        <!-- Call Info -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Call Information</h2>
          <div class="space-y-3">
            <div>
              <label class="block text-sm font-medium text-gray-700">Date</label>
              <p class="text-lg text-gray-900"><%= @call.call_date.strftime("%B %d, %Y") %></p>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700">Time</label>
              <p class="text-lg text-gray-900"><%= @call.call_time.strftime("%I:%M %p") %></p>
            </div>
          </div>
        </div>

        <!-- Participants -->
        <div>
          <h2 class="text-xl font-semibold text-gray-900 mb-4">Participants</h2>
          <% if @call.participants.any? %>
            <div class="space-y-2">
              <% @call.participants.by_name.each do |participant| %>
                <div class="flex items-center">
                  <div class="w-2 h-2 bg-blue-600 rounded-full mr-3"></div>
                  <span class="text-gray-900"><%= participant.name %></span>
                </div>
              <% end %>
            </div>
          <% else %>
            <p class="text-gray-500">No participants recorded</p>
          <% end %>
        </div>
      </div>

      <!-- Transcript -->
      <div>
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Transcript</h2>
        <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
          <% if @call.transcript_file.present? %>
            <div class="prose prose-gray max-w-none">
              <%= simple_format(@call.transcript_file) %>
            </div>
          <% else %>
            <p class="text-gray-500 text-center py-8">No transcript available</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex justify-center space-x-4">
      <%= link_to 'Edit Call', edit_company_call_path(@company, @call), class: 'bg-green-600 hover:bg-green-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200' %>
      <%= link_to 'Delete Call', company_call_path(@company, @call), method: :delete, 
                  confirm: 'Are you sure? This will permanently delete the call and transcript.', 
                  class: 'bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-6 rounded-lg transition duration-200' %>
    </div>
  </div>
</div>
